@model List<Product> <!-- Assuming the model is a list of Product objects -->

@{
    ViewData["Title"] = "All Products";
}

<div class="container">
    <h1>All Products</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Price: $@product.Price</p>
                        <a href="@Url.Action('Details', 'Product', new { id = product.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
