<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fs-2 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Armor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark  fw-bold" asp-area="" asp-controller="Home" asp-action="about">About</a>
                        </li>
                        
                         <li class="nav-item ">
    <a class="nav-link text-dark  fw-bold" asp-area="" asp-controller="Home" asp-action="signin">SignIn</a>

 </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark  fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item ms-1">
                              <form class="d-flex" role="search">
        <input class="form-control " type="search" placeholder="Search" aria-label="Search" style="width: 200px;">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
            </li>



<li class="nav-item dropdown ">
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle text-dark bg-primary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Profile
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
               <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="username">Username</a>
               <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="profile">Profile</a>
               <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="logout">Logout</a>
        
              </div>
            </div>
          </li>







 <li class="nav-item ">
<div class="cart-wishlist">
      <a href="#"><i class="fas fa-shopping-cart text-danger"></i><span class="badge badge-primary cart-badge text-primary">0</span></a>
      <a href="#"><i class="fas fa-heart text-danger"></i></a>
    </div>
   </li>






                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
          

      <div class="row">
        <div class="col-md-4">
          <div class="footer-logo">
            <img src="logo.png" alt="Beast Perfume Logo" width="100">
          </div>
        </div>
        <div class="col-md-4">
          <div class="footer-contact">
            <h5>Contact Details</h5>
            <p>Address: 123 Main St, City, Country</p>
            <p>Phone: +1234567890</p>
            <p>Email: info@beastperfume.com</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="footer-menu">
            <h5>Our Products</h5>
            <ul>
              <li><a href="#">Men's</a></li>
              <li><a href="#">Women's</a></li>
              <li><a href="#">Unisex</a></li>
            </ul>
          </div>
        </div>
      </div>
  
            &copy; 2024 - project3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
